@model IEnumerable<Lavendieksam_RadionovTARpe17.Models.Plaat>

@{
    ViewBag.Title = "Meie alandlik plaadivalik!";
}

<h2>Plaadid</h2>

<p>
    @Html.ActionLink("Lisa müüki", "Create")
</p>
<table class="hoverTable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nimi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Artist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Žanr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hind)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nimi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Žanr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hind)€
            </td>
            <td>
                @Html.ActionLink("Muuda", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Osta", "Osta", new { id = item.Id }) |
                @Html.ActionLink("Kustuta", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Detailid", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<table class="hoverTable">
    <tr><td>Kõikide toodete hind kokku: @Model.Sum(i => i.Hind)€</td></tr>
</table>
