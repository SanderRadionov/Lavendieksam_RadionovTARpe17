@model IEnumerable<Lavendieksam_RadionovTARpe17.Models.Kitarr>

@{
    ViewBag.Title = "Meie alandlik kitarrivalik!";
}

<h2>Kitarrid</h2>

<p>
    @Html.ActionLink("Lisa müüki", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Mudel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hind)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Mudel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hind)€
        </td>
        <td>
            @Html.ActionLink("Muuda", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Osta", "Osta", new { id = item.Id }) |
            @Html.ActionLink("Kustuta", "Delete", new { id = item.Id }) |
            @Html.ActionLink("Detailid", "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>

<div>
Kõikide toodete hind kokku: @Model.Sum(i=>i.Hind)€
</div>
